print("As operaçôes são:")
print("+ Adição")
print("- Subtração")
print("* Multiplicação")
print("/ Divisão")
a = float(input("Digite o primeiro número: "))
operacao = str(input("Digite a operação: "))
b = float(input("Digite o segundo número: "))
if operacao == '+':
    print(a+b)
elif operacao == '-':
    print (a-b)
elif operacao == '*':
    print (a*b)
elif operacao == '/':
    print (a/b)
else :
    print ("erro ao fazer o calculo")
